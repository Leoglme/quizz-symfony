{% extends 'base.html.twig' %}

{% block title %}{{ category }} | Résultat{% endblock %}

{% block main %}
    <div class="quiz__result--header">
        <h2 style="margin-bottom: 0;" class="quiz__question">{{ category }}</h2>
    </div>
    <div class="quiz__container" style="background: #5b58c2; padding: 85px 32px 32px 32px; color: #FFFFFF;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);">
        <div class="quiz__result--body">
            <div style="display: flex; flex-direction: column; margin-right: 32px">
                <p><span class="quiz-modal__icon quiz-modal__icon--correct" style="color: rgba(49, 247, 93, 0.91);">✔
                </span>Correct : <span>{{ countValideResponse }}</span>
                </p>
                <p><span class="quiz-modal__icon quiz-modal__icon--incorrect">✕</span>Incorrect :
                    <span>{{ countQuestion - countValideResponse }}</span></p>
            </div>
            <div class="progress" data-percentage="{{ countValideResponse * 100 / countQuestion }}">
				<span class="progress-left">
					<span class="progress-bar"></span>
				</span>
                <span class="progress-right">
					<span class="progress-bar"></span>
				</span>
                <div class="progress-value">
                    <div>
                        {{ countValideResponse * 100 / countQuestion }}%
                    </div>
                </div>
            </div>
        </div>
        <a role="button" href="{{ path('category.list') }}" class="quiz-modal__btn quiz-modal__btn--enabled">Jouer encore</a>
    </div>

    <style>
        main {
            background-color: #b8c6db;
            background-image: linear-gradient(315deg, #b8c6db 0%, #f5f7fa 100%);
            font-family: 'Poppins', sans-serif;
            display: flex;
            align-items: center;
            justify-content: flex-start;
            height: 100vh;
            overflow: hidden;
            margin: 0;
            flex-direction: column;
        }
    </style>
{% endblock %}

