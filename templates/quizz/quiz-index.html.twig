{% extends 'base.html.twig' %}

{% block title %}{{ question }}{% endblock %}

{% block main %}
    <div class="quiz__container">
        <div class="quiz__header">
            <h2 class="quiz__question">{{ question }}</h2>
            {{ form_start(form) }}
            {{ form_rest(form) }}
        </div>
        <button class="btn btn-secondary" type="submit">Question suivante</button>
        {{ form_end(form) }}
    </div>
    <div class="quiz__infos">
        <div style="display: flex; flex-direction: column; margin-right: 32px">
            <p><span class="quiz-modal__icon quiz-modal__icon--correct" style="color: rgba(49, 247, 93, 0.91);">✔
                </span>Correct : <span>{{ correct }}</span>
            </p>
            <p><span class="quiz-modal__icon quiz-modal__icon--incorrect">✕</span>Incorrect : <span>{{ incorrect }}</span></p>
        </div>
        <div class="quiz__paginate">{{ currentPage }}/{{ totalPage }}</div>
    </div>

    <style>
        main{
            background-color: #b8c6db;
            background-image: linear-gradient(315deg, #b8c6db 0%, #f5f7fa 100%);
            font-family: 'Poppins', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            overflow: hidden;
            margin: 0;
            flex-direction: column;
        }
    </style>
{% endblock %}